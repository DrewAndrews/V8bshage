    ViewData["Title"] = "News";
}

<link rel="stylesheet" href="~/css/news.css"/>
<section class="grid">
    @for (int i = 0; i < 8; ++i)
    {
    <article class="grid-item">
        <div class="image">
            <img src="photo.jpg" />
        </div>
        <div class="info">
